{
    "name": "Trade Weaver Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },

    // Tells VS Code which user to run as inside the container.
    // The base image creates 'vscode' for us.
    "remoteUser": "vscode",

    "customizations": {
        "vscode": {
            "settings": {
                    // Set Python path for VS Code tools like linters
                    "python.defaultInterpreterPath": "/usr/local/bin/python"
                },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    
    "forwardPorts": [8000],

    "mounts": [
        "source=${localEnv:USERPROFILE}\\.config\\gcloud,target=/home/vscode/.config/gcloud,type=bind,consistency=cached"
    ],

    "postCreateCommand": "gcloud config set project trade-weaver-platform"
}